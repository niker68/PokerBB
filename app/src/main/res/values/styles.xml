<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color3</item>
        <item name="colorControlHighlight">@color/color3</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color3</item>
        <item name="colorAccent">@color/color1</item>
        <item name="colorControlNormal">@color/color1</item>
        <item name="android:thumb">@color/color1</item>

        <item name="thumbTint"></item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/color1
    </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>


    </style>

    <style name="styleOFButton" parent="">

        <item name="colorAccent">@color/color1</item>
        <item name="colorControlHighlight">@color/color1</item>
        <item name="colorControlNormal">@color/color1</item>
        <item name="colorControlActivated">@color/color1</item>
        <item name="android:colorButtonNormal">@color/color3</item>
        <item name="android:textAlignment">center</item>

    <!-- Customize your theme here. -->


</style>

</resources>
