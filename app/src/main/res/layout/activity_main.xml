<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_paper1"
    android:orientation="vertical"
    android:weightSum="10.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="36dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0dp"
            android:text="10:00"
            android:textAlignment="center"
            android:textColor="@color/color5"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/color5"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/color5"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/color5"
            android:textSize="70sp" /><![CDATA[

        />

    ]]>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <!--        android:onClick="plus0"-->

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="108dp"
            android:layout_marginLeft="108dp"
            android:layout_weight="1"
            android:width="0dp"

            android:padding="1dp"
            android:text="+"
            android:textColor="@color/color6Text"
            android:textSize="24sp"
            android:theme="@style/styleOFButton" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="108dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/color5"
            android:textSize="70sp" />


        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="108dp"
            android:layout_weight="1"
            android:width="0dp"

            android:padding="1dp"
            android:text="+"
            android:textColor="@color/color6Text"
            android:textSize="24sp"
            android:theme="@style/styleOFButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button32"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="108dp"
            android:layout_marginLeft="108dp"
            android:layout_weight="1"
            android:width="0dp"

            android:padding="1dp"
            android:text="-"
            android:textColor="@color/color6Text"
            android:textSize="24sp"
            android:theme="@style/styleOFButton" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="108dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" "
            android:textAlignment="center"
            android:textColor="@color/color5"
            android:textSize="70sp" />

        <Button
            android:id="@+id/button33"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="108dp"
            android:layout_weight="1"
            android:width="0dp"

            android:padding="1dp"
            android:text="-"
            android:textColor="@color/color6Text"
            android:textSize="24sp"
            android:theme="@style/styleOFButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_weight="1"
            android:onClick="startTimer"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Start"
            android:textColor="@color/color6Text"
            android:textSize="12sp"
            android:theme="@style/styleOFButton" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_weight="1"
            android:onClick="resetTimer"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Reset"
            android:textColor="@color/color6Text"
            android:textSize="12sp"
            android:theme="@style/styleOFButton" />

        <Button
            android:id="@+id/buttonplus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_weight="1"
            android:onClick="plus5sec"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="+30Sec"
            android:textColor="@color/color6Text"
            android:textSize="12sp"
            android:theme="@style/styleOFButton" />

        <Button
            android:id="@+id/buttonminus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_weight="1"
            android:onClick="minus5sec"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="-30Sec"
            android:textColor="@color/color6Text"
            android:textSize="12sp"
            android:theme="@style/styleOFButton" />

        <Switch
            android:id="@+id/switch6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_weight="1"
            android:checked="true"
            android:theme="@style/SCBSwitch"
            tools:checked="true" />

    </LinearLayout>

</LinearLayout>